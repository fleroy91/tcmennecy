<%= stylesheet_link_tag "/pgwslider.min.css", :cache => true %>

<!--==============================content================================-->
  <section id="content">

    <div class="container_12">
      <ul class="pgwSlider">
        <% Refinery::Galleries::Gallery.where(a_afficher_grand: true).each do |gallery| %>
          <li><%= image_tag gallery.photo.url, alt: "#{gallery.titre}", height: "415px" %></li>
        <% end %>
      </ul>
    </div>
  </section>
<% content_for :javascripts do %>
  <%= javascript_include_tag "pgwslider" %>
  <%= javascript_include_tag "tms-0.4.1" %>
  <script>Cufon.now();</script>
<script>
$(document)
    .ready(function () {
     var pgwslider = $('.pgwSlider').pgwSlider({
      adaptiveHeight: true,
      listPosition: 'right',
      selectionMode: 'mouseOver',
      displayControls: true,
      maxHeight: 415
     });
})
</script>
