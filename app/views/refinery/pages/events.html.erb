  <!--==============================content================================-->
  <section id="content">
    <div class="container_12">
      <div class="grid_12 top-1">
        <div class="box-shadow">
          <div class="wrap block-2">
            <h2 class="p3"><span class="color-1">Ev&eacute;nements</span> &agrave; venir</h2>
            <% Refinery::Events::Event.visible.each do |event| %>
            <div class="wrap box-1">
              <p class="p2"><%= l event.date, format: :long %></p>
              <%= image_fu event.photo, "250x250", class: "img-border img-indent" %>
              <div class="extra-wrap">
                <p class="p2"><strong><%= event.title %></strong></p>
                <div class="blurb"><%=raw event.blurb %></div>
              </div>
            </div>
            <hr style="margin: 10px 0px;"/>
            <% end %>
          </div>
        </div>
      </div>
      <div class="clear"></div>
    </div>
  </section>
<% content_for :javascripts do %>
  <script>Cufon.now();</script>
<% end %>