<%= form_for [refinery, :galleries_admin, @gallery] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @gallery,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :titre -%>
    <%= f.text_field :titre, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :photo, hint: "Taille conseillÃ©e : 940x415" -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @gallery.photo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :a_afficher_grand -%>
    <%= f.check_box :a_afficher_grand, :checked => @gallery[:a_afficher_grand] -%>
  </div>

  <div class='field'>
    <%= f.label :a_afficher_petit -%>
    <%= f.check_box :a_afficher_petit, :checked => @gallery[:a_afficher_petit] -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.galleries.admin.galleries.gallery'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @gallery.titre) -%>
<% end -%>
