<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(gallery) -%>">
  <span class='title'>
    <%= gallery.titre %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_galleries_admin_gallery_path(gallery),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.galleries_admin_gallery_path(gallery),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => gallery.titre),
        :method => :delete %>
  </span>
</li>
