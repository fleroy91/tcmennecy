<!--==============================content================================-->
<% content_for :body do %>
  <section id="content">
    <div class="container_12">
      <div class="grid_12">
        <div class="box-shadow">
          <div class="wrap block-2">
            <div class="col-3">
              <h2 class="small-h2"><%= t('.other') %></h2>
                <ul class="side_menu">
                  <% @events.each do |event| %>
                    <% if event != @event then %>
                      <li>
                        <%= link_to event.title, refinery.events_event_path(event) %>
                      </li>
                    <% end %>
                  <% end %>
                </ul>
                <br/>
                <%= link_to t(".list_all"), refinery.events_events_path %>
            </div>
            <div class="col-4">
              <h2 class="color-1"><%= @event.title %></h2>
              <h3>Le <%=l @event.date, format: :long %></h3>
              <%= image_fu @event.photo, "590x450" %>
              <br/>
              <%= raw @event.blurb %>
            </div>
          </div>
        </div>
      </div>
      <div class="clear"></div>
    </div>
  </section>
  <% content_for :javascripts do %>
    <script>Cufon.now();</script>
  <% end %>
<% end %>

<%= render '/refinery/content_page', :hide_sections => :body_content_title %>
