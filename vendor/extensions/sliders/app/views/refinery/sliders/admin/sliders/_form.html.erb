<%= form_for [refinery, :sliders_admin, @slider] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @slider,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :titre -%>
    <%= f.text_field :titre, :class => 'widest', placeholder: "première partie de titre" -%>
  </div>

  <div class='field'>
    <%= f.label :titre_suite -%>
    <%= f.text_field :titre_suite, :class => 'widest', placeholder: "deuxième partie de titre" -%>
  </div>

  <div class='field'>
    <%= f.label :sous_titre -%>
    <%= f.text_field :sous_titre, :class => 'widest' -%>
  </div>

  <div class='field'>
    <%= f.label :lien -%>
    <%= f.text_field :lien, :class => 'widest', placeholder: "/nom_de_page" -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @slider.photo,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.sliders.admin.sliders.slider'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @slider.titre) -%>
<% end -%>
