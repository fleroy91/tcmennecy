<ul>
  <% if ::Refinery::Sliders::Admin::SlidersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.sliders_admin_sliders_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_sliders_admin_slider_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Sliders::Admin::SlidersController.sortable? && ::Refinery::Sliders::Slider.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Sliders"),
                 refinery.sliders_admin_sliders_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Sliders"),
                 refinery.sliders_admin_sliders_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
