<% content_for :body do %>
  <section id="content">
    <div class="container_12">
      <div class="grid_12">
        <div class="box-shadow">
          <div class="wrap block-2">
            <div class="col-3">
								<h1 id="body_content_title"><%= t('.list_all') %></h1>
              </div>
            <div class="col-4">
            	<table class="table table-bordered">
            		<thead>
            			<tr>
	            			<th>Le</th>
	            			<th colspan=2><%= t('.class') %></th>
	            			<th></th>
            			</tr>
            		</thead>
            		<tbody>
							    <% @res_sportifs.each do |res_sportif| %>
							    	<tr>
								      <td><%=l res_sportif.date, format: :long %></td>
								      <td><%= image_fu res_sportif.photo, "100x100" %></td>
								      <td><%= link_to res_sportif.titre, refinery.res_sportifs_res_sportif_path(res_sportif) %></td>
								      <td><%= link_to "Plus d'informations", refinery.res_sportifs_res_sportif_path(res_sportif) %></td>
								     </tr>
							    <% end %>
            		</tbody>
            	</table>
            </div>
          </div>
        </div>
      </div>
      <div class="clear"></div>
    </div>
  </section>
	<% content_for :javascripts do %>
	  <script>Cufon.now();</script>
	<% end %>
<% end %>

<%= render '/refinery/content_page', :hide_sections => :body_content_title %>
