<%= form_for [refinery, :res_sportifs_admin, @res_sportif] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @res_sportif,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :titre -%>
    <%= f.text_field :titre, :class => 'larger widest' -%>
  </div>
  <div class='field'>
    <%= f.label :date -%>
    <%= f.date_select :date -%>
  </div>
  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @res_sportif.photo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "res_sportifs/res_sportif" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.res_sportifs.admin.res_sportifs.res_sportif'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @res_sportif.titre) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
